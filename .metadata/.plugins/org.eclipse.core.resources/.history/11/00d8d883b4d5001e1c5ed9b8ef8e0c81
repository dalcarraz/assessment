package com.cibertec.assessment.controller;

import com.cibertec.assessment.model.Square;
import com.cibertec.assessment.service.SquareService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api/squares")
public class SquareController {

    @Autowired
    private SquareService squareService;

    @PostMapping
    public ResponseEntity<Square> createSquare(@RequestBody Square square) {
        // Llama al servicio para crear el cuadrado
        Square createdSquare = squareService.create(square);
        return new ResponseEntity<>(createdSquare, HttpStatus.CREATED);
    }

    @PostMapping("/validateAndCreate")
    public ResponseEntity<Square> validateAndCreateSquare(@RequestBody Square square) {
        // Llama al servicio para validar y crear el cuadrado
        squareService.validateAndCreateSquare(square);
        return new ResponseEntity<>(square, HttpStatus.CREATED);
    }

    @GetMapping
    public ResponseEntity<List<Square>> getAllSquares() {
        // Llama al servicio para obtener todos los cuadrados
        List<Square> squares = squareService.list();
        return new ResponseEntity<>(squares, HttpStatus.OK);
    }

    // Puedes agregar más endpoints según sea necesario
}
